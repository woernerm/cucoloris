#:kivy 2.0
#: import utils kivy.utils


###############################################################################
############################# SOLID COLOR BUTTONS #############################
###############################################################################

##
# \brief Layout for drawing a touchable / clickable button.
<Btn>:
    # Geometry
    size:               [label.texture_size[0] + root.padding[0]*2 + root.shadow_width*2, label.texture_size[1] + root.padding[1]*2 + root.shadow_width*2]
    radius:             [4, 4, 4, 4]
    border_width:       0
    padding:            [14, 8]
    size_hint:          None, None    

    # Text
    text:               'Button'
    font_size:          '16sp'
    underline:          False

    # Default Color
    fill_color:         utils.get_color_from_hex('#0d6efdff')
    border_color:       utils.get_color_from_hex('#0d6efdff')
    text_color:         utils.get_color_from_hex('#ffffffff')
    shadow_color:       utils.get_color_from_hex('#0d6efd6c')
    
    # Action Color
    hover_fill:         [0, 0, -0.15]
    press_fill:         [0, 0, -0.2]
    hover_text:         [0, 0, 0]
    press_text:         [0, 0, 0]
    
    # Misc
    transition:         0.15

    _label:             label

    ColorLabel:
        id:             label
        pos:            root.pos
        text:           root.text
        size:           root.size
        font_size:      root.font_size
        nominal_color:  root.text_color
        underline:      root.underline

